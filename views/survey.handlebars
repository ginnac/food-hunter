<div class="container-fluid">
  <div class="row survey">
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Survey Questions</h3>
        </div>
        <h3 id="eater-number">
          <strong> Eater 1 </strong>
        </h3>
        <div class="row questions">
          <div class="col-md-10"></div>
          <h5>
            <strong>What food type are you craving at the moment? </strong>

          </h5>
          <select class="chosen-select" id="q1">
            <option value>Select Option</option>
            <option value="American Cuisine">American Cuisine</option>
            <option value="Indian Cuisine">Indian Cuisine</option>
            <option value="Thai Cuisine">Thai Cuisine</option>
            <option value="Chinese Cuisine">Chinese Cuisine</option>
            <option value="Greek Cuisine">Greek Cuisine</option>
            <option value="Mexican Cuisine">Mexican Cuisine</option>
            <option value="Japenese Cuisine">Japenese Cuisine</option>
            <option value="Italian Cuisine">Italian Cuisine</option>
          </select>
        </div>
      </div>
      <div class="col-md-10">
        <h5>
          <strong>What's your current mood? </strong>
        </h5>
        <select class="chosen-select" id="q2">
          <option value>Select Option</option>
          <option value="happy">happy</option>
          <option value="sleepy">sleepy</option>
          <option value="adventurous">adventurous</option>
          <option value="hangry">hangry</option>
        </select>
      </div>
      <div class="col-md-10">
        <h5>
          <strong> How much would you like to spend on your meal? </strong>
        </h5>
        <select class="chosen-select" id="q3">
          <option value>Select Option</option>
          <option value="5-10">$5-10</option>
          <option value="10-20">$10-20</option>
          <option value="30">$30</option>
        </select>
      </div>

      {{!-- Sumbit Button --}}
      <button type="submit" class="btn btn-primary btn-lg btn-block" id="submit"> Submit</button>
      <hr>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Launch demo modal
      </button>

      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <h1 id="modal_f">Test</h1>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>


