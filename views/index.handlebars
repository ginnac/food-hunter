<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
       
        <h2>Food Hunter</h2>

        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="eaters">Number of eaters</label>
            <input type="number" id="eaters" class="form-control" aria-describedby="eaters" placeholder="Enter Number of Eaters">
          </div>
          <div class="form-group">
            <label for="group">Group Name</label>
            <textarea class="form-control" id="group" aria-describedby="group" placeholder="Enter Group Name"></textarea>
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" class="form-control" aria-describedby="email" placeholder="Enter Email">
          </div>
           <div class="form-group">
            <label for="zipcode">Zip Code</label>
            <textarea class="form-control" id="zipcode" aria-describedby="zipcode" placeholder="Enter Zipcode"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>


<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
