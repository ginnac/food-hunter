<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h2>Food Hunter</h2>

        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Number of eaters</label>
            <input type="text" id="eaters" class="form-control" aria-describedby="example-text"
              placeholder="Enter Number ">
          </div>
          <div class="form-group">
            <label for="example-description">Group Name</label>
            <textarea class="form-control" id="group" aria-describedby="example-description"
              placeholder="Enter Group Name"></textarea>
          </div>
          <div class="form-group">
            <label for="example-description">Email</label>
            <textarea class="form-control" id="email" aria-describedby="example-description"
              placeholder="Enter Email"></textarea>
          </div>
          <div class="form-group">
            <label for="example-description">Zip Code</label>
            <textarea class="form-control" id="zipcode" aria-describedby="example-description"
              placeholder="Enter Zipcode"></textarea>
          </div>
          <div> 
            <button type = "button" class = "btn btn-lg btn-primary">
            <a href="/survey/:id">
              <h4>
                <span class= "glyphicon glyphicon-list-alt">
                </span>
                Go to Survey
              </h4>
            </a>
            </button>
          </div>
        </form>


